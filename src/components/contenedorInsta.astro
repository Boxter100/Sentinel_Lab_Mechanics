---
export interface Props {
  imagen: string;
  likes: number;
  descripcion: string;
  comentarios: number;
  diasPublicado: number;
}

const { imagen = "/frames/0001.webp", likes = 128, descripcion = "Gabinete estándar en color blanco, perfecto para cualquier espacio. #gabinete #diseño", comentarios = 24, diasPublicado = 2 } = Astro.props;
---

<div class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
  <div class="p-3 border-b border-gray-200 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 rounded-full bg-gradient-to-r from-purple-500 to-pink-500"></div>
      <span class="font-semibold">sentinel_lab_mechanical</span>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
    </svg>
  </div>
  <img src={imagen} alt="Gabinete" class="w-full aspect-square object-cover" />
  <div class="p-4">
    <div class="flex justify-between items-center mb-3">
      <div class="flex space-x-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-red-500 transition-colors duration-200 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-blue-500 transition-colors duration-200 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-green-500 transition-colors duration-200 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
        </svg>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-yellow-500 transition-colors duration-200 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
      </svg>
    </div>
    <p class="font-semibold mb-1">{likes} Me gusta</p>
    <p><span class="font-semibold">sentinel_lab_mechanical</span> {descripcion}</p>
    <p class="text-gray-500 text-sm mt-1 cursor-pointer hover:underline">Ver los {comentarios} comentarios</p>
    <p class="text-gray-400 text-xs mt-1">HACE {diasPublicado} DÍAS</p>
  </div>
</div>